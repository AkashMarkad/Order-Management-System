<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProductNameAndQRCode">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/violet"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/productNameAndQRCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_name_amp_qr_code"
                    android:textColor="@color/orange"
                    android:layout_gravity="center"
                    android:textSize="25sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/quentity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/quantity"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/white"
                        android:layout_marginEnd="20dp"/>

                    <EditText
                        android:id="@+id/quentityValue"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15ssp"
                        android:inputType="number"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:layout_marginStart="150dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weight_gms"
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/white"
                        android:layout_marginEnd="20dp"/>

                    <EditText
                        android:id="@+id/weightValue"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15ssp"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:layout_marginStart="109dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/lessWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/less_weight_gms"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/white"
                        android:layout_marginEnd="20dp"/>

                    <EditText
                        android:id="@+id/lessWeightValue"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15ssp"
                        android:inputType="numberDecimal"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:layout_marginStart="58dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/addWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_weight_gms"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/white"
                        android:layout_marginEnd="20dp"/>

                    <EditText
                        android:id="@+id/addWeightValue"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15ssp"
                        android:inputType="numberDecimal"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:layout_marginStart="64dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/netWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/net_weight_gms"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/white"
                        android:layout_marginEnd="20dp"/>

                    <EditText
                        android:id="@+id/netWeightValue"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15ssp"
                        android:inputType="numberDecimal"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:layout_marginStart="72dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/saleLessWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sale_less_weight_gms"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/white"
                        android:layout_marginEnd="20dp"/>

                    <EditText
                        android:id="@+id/saleLessWeightValue"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15ssp"
                        android:inputType="numberDecimal"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:layout_marginStart="15dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/itemSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/item_size"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/white"
                        android:layout_marginEnd="20dp"/>

                    <EditText
                        android:id="@+id/itemSizeValue"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15ssp"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:layout_marginStart="153dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/hallMark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hallmark"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/white"
                        android:layout_marginEnd="20dp"/>

                    <EditText
                        android:id="@+id/hallMarkValue"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15ssp"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:layout_marginStart="139dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/ic_baseline_image_24"
                        android:layout_marginEnd="20dp"
                        android:contentDescription="Image" />

                    <TextView
                        android:id="@+id/txtViewCamera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/camera"
                        android:clickable="true"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/white"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="20dp"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/txtViewGallary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gallary"
                        android:clickable="true"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/white"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="20dp"
                        android:focusable="true" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnNewProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_new"
                    android:textSize="@dimen/_15ssp"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/violet"
                    android:layout_marginEnd="12dp"/>

                <Button
                    android:id="@+id/btnSaveProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_15ssp"
                    android:layout_marginEnd="12dp"
                    android:backgroundTint="@color/violet"/>
                <Button
                    android:id="@+id/btnPrintQR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/print_qr"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_15ssp"
                    android:backgroundTint="@color/violet"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>