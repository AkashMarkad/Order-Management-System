<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/violet"
        android:orientation="vertical"
        android:padding="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/product_name"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_20ssp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
            android:id="@+id/checkBoxGroupProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_20sdp"
            android:text="@string/group_product"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"/>


            <RadioGroup
                android:id="@+id/RGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioBtnGold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:text="@string/gold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"/>

                <RadioButton
                    android:id="@+id/radioBtnSilver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/silver"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"/>

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/categorySpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="select category"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"/>

            <Spinner
                android:id="@+id/designSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="select design"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"/>


            <Spinner
                android:id="@+id/hsnSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="select HSN"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"/>

<!--            <TextView-->
<!--                android:id="@+id/HSN"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="@string/hsn"-->
<!--                android:textSize="20sp"-->
<!--                android:textColor="@color/white"-->
<!--                android:layout_marginStart="@dimen/_20sdp"/>-->
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/orange"/>

        <TextView
            android:id="@+id/ornamentDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/ornament_details"
            android:textColor="@color/white"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/purity"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_20sdp"
                android:text="@string/purity"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"/>

            <EditText
                android:id="@+id/purityValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/_92_16"
                android:inputType="numberDecimal"
                android:textColor="@color/white"
                android:textColorHint="@color/off_white"
                android:textSize="@dimen/_15ssp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/purchaseWastage"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_20sdp"
                android:text="@string/purchase_wastage"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"/>

            <EditText
                android:id="@+id/purchaseWastageValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/_2_5"
                android:inputType="numberDecimal"
                android:textColor="@color/white"
                android:textColorHint="@color/off_white"
                android:textSize="@dimen/_15ssp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/minStock"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_20sdp"
                android:text="@string/min_stock"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"/>

            <EditText
                android:id="@+id/minStockValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="500"
                android:inputType="numberDecimal"
                android:textColor="@color/white"
                android:textColorHint="@color/off_white"
                android:textSize="@dimen/_15ssp"/>

            <Spinner
                android:id="@+id/minStockUnits"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="gms"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/orange"/>

        <TextView
            android:id="@+id/salesDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/sales_details"
            android:textColor="@color/white"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/wastageR"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_20sdp"
                android:text="@string/wastage_r"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"/>

            <EditText
                android:id="@+id/wastageRValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/_3"
                android:inputType="numberDecimal"
                android:textColor="@color/white"
                android:textColorHint="@color/off_white"
                android:textSize="@dimen/_15ssp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/WastageW"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_20sdp"
                android:text="@string/wastage_w"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"/>

            <EditText
                android:id="@+id/wastageWValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/_6"
                android:inputType="numberDecimal"
                android:textColor="@color/white"
                android:textColorHint="@color/off_white"
                android:textSize="@dimen/_15ssp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/makingRateR"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_20sdp"
                android:text="@string/making_rate_r"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"/>

            <EditText
                android:id="@+id/makingRateRValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="500"
                android:inputType="numberDecimal"
                android:textColor="@color/white"
                android:textColorHint="@color/off_white"
                android:textSize="@dimen/_15ssp"/>

            <Spinner
                android:id="@+id/makingRateRUnits"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="select unit"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/makingRateW"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_20sdp"
                android:text="@string/making_rate_w"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"/>

            <EditText
                android:id="@+id/makingRateWValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="500"
                android:inputType="numberDecimal"
                android:textColor="@color/white"
                android:textColorHint="@color/off_white"
                android:textSize="@dimen/_15ssp"/>

            <Spinner
                android:id="@+id/makingRateWUnits"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="select unit"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>
    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnNew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:backgroundTint="@color/violet"
                    android:text="@string/_new"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp" />

                <Button
                    android:id="@+id/btnSaveAndProceed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/violet"
                    android:text="@string/save_amp_proceed"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

