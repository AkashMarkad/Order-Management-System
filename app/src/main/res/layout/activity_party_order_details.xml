<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".PartyOrderDetailsActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/orange"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/partyName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/party_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_25ssp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/violet"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cr. Amount"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15ssp"
                            android:id="@+id/cr_amount"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(Jama /To Give)"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12ssp"/>

                    </LinearLayout>

                    <EditText
                        android:id="@+id/cr_amount_value"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15ssp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dr. Amount"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15ssp"
                            android:id="@+id/dr_amount"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(Nave /To Receive)"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12ssp"/>

                    </LinearLayout>

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/white"
                        android:id="@+id/dr_amount_value"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cr. Gold (GMS)"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15ssp"
                            android:id="@+id/cr_gold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(Jama /To Give)"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12ssp"/>

                    </LinearLayout>

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/white"
                        android:id="@+id/cr_gold_value"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dr. Gold (GMS)"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15ssp"
                            android:id="@+id/dr_gold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(Nave /To Recieve)"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12ssp"/>

                    </LinearLayout>

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/white"
                        android:id="@+id/dr_gold_value"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cr. Silver (GMS)"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15ssp"
                            android:id="@+id/cr_silver"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(Jama /To Give)"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12ssp"/>

                    </LinearLayout>

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/white"
                        android:id="@+id/cr_silver_value"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dr. Silver (GMS)"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15ssp"
                            android:id="@+id/dr_silver"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(Nave /To Receive)"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12ssp"/>

                    </LinearLayout>

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/white"
                        android:id="@+id/dr_silver_value"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center|bottom"
                android:layout_marginTop="20dp"
                android:paddingBottom="30dp">

                <Button
                    android:id="@+id/save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/violet"
                    android:layout_marginEnd="@dimen/_30sdp"/>

                <Button
                    android:id="@+id/exit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/exit"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:backgroundTint="@color/violet"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>